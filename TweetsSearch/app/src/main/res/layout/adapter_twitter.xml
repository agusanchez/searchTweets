<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/adapter_small_margin"
    android:layout_marginBottom="@dimen/adapter_small_margin"
    android:padding="@dimen/adapter_media_padding">

    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="@dimen/twitter_image_width"
        android:layout_height="@dimen/twitter_image_height"
        android:layout_marginRight="@dimen/adapter_media_margin"/>

    <TextView
        android:id="@+id/publish_date"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_picture"/>

    <TextView
        android:id="@+id/user_message"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_date"
        android:layout_marginTop="@dimen/adapter_media_margin"
        android:linksClickable="true"
        android:autoLink="all"
        android:textColorLink="@color/text_color_link"
        android:layout_toRightOf="@+id/user_picture"/>


</RelativeLayout>